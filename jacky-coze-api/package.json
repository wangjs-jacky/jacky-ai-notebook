{
  "name": "jacky-coze-api",
  "version": "1.0.0",
  "description": "A high-level wrapper for Coze API with lifecycle events, conversation management, and TypeScript support",
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    },
    "./interface": {
      "types": "./dist/interface.d.ts",
      "import": "./dist/esm/interface.js",
      "require": "./dist/interface.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "README.zh.md",
    "QUICK_START.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:esm:package",
    "build:cjs": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:esm:package": "echo '{\"type\":\"module\"}' > dist/esm/package.json",
    "start": "node dist/index.js",
    "dev": "ts-node src/examples/demo.ts",
    "dev:watch": "nodemon --exec ts-node src/examples/demo.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "test": "node test-import.js && node test-import.mjs"
  },
  "keywords": [
    "coze",
    "coze-api",
    "ai",
    "chatbot",
    "conversation",
    "typescript",
    "agent"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/jacky-coze-api.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/jacky-coze-api/issues"
  },
  "homepage": "https://github.com/yourusername/jacky-coze-api#readme",
  "peerDependencies": {
    "@coze/api": "^1.3.0"
  },
  "dependencies": {
    "@coze/api": "^1.3.7"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
