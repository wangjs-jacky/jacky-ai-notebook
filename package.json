{
  "name": "jacky-ai-notebook",
  "version": "1.0.0",
  "description": "AI Notebook TypeScript 项目集合",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "build:ai-ts": "cd ai-ts && npm run build",
    "build:coze-api": "cd jacky-coze-api && npm run build",
    "build:lark-api": "cd jacky-lark-api && npm run build",
    "build:mcp-demo": "cd mcp-framework-demo && npm run build",
    "build:all": "npm run build:ai-ts && npm run build:coze-api && npm run build:lark-api && npm run build:mcp-demo"
  },
  "keywords": ["typescript", "ai", "notebook", "coze", "lark", "mcp"],
  "author": "Jacky Wang",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "ai-ts",
    "jacky-coze-api",
    "jacky-lark-api",
    "mcp-framework-demo",
    "MCP-Chinese-Getting-Started-Guide"
  ]
}
